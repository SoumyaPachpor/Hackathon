        }
    </script>
    <div class="form">
        <div class="row">
            <div class="col">
                <input type="text" id="organizationName" class="form-control" placeholder="Organization / Club Name "
                    aria-label="Organization Name">
            </div>
            <div class="col">
                <input type="text" id="organizerName" class="form-control" placeholder="Organizer's Name "
                    aria-label="Organizer's Name">
            </div>
        </div>
        <br>
        <br>
        Select Date:
        <select id="month" name="month">
            <option value="">MM</option>
            <script>
        for (var month = 1; month <= 12; month++) {
            document.write('<option value="' + month + '">' + month + '</option>');
        }
    </script>
        </select>
        <select id="days" name="days">
            <option value="">DD</option>
            <script>
          for (var day = 1; day <= 31; day++) {
            document.write('<option value="' + day + '">' + day + '</option>');
        }
    </script>
        </select>
        <select id="year" name="year" onchange="validateDOB1()">
          <option value="">YY</option>
            <script>
        for (var year = 2024; year <= 2040; year++) {
            document.write('<option value="' + year + '">' + year + '</option>');
        }
    </script>
        </select>
        <br>
        <br>
        Number of Seats to be booked:
        <input type="text" id="numberOfSeats" class="responsive-textbox" placeholder="">
        <br>
        <br>
        <div class="col-md-4">
            <label for="purposeOfBooking" class="form-label">Purpose of Booking:</label>
            <select id="purposeOfBooking" class="form-select">
                <option selected>Choose..</option>
                <option>Exams</option>
                <option>Seminar</option>
                <option>Training and Workshop </option>
            </select>
        </div>
        <br>
        <br>
        Duration:
        <br>
        <form class="duration-form">
            <label for="startTime">Start Time:</label>
            <input type="time" id="startTime" required>
            <label for="endTime">End Time:</label>
            <input type="time" id="endTime" required>
        </form>
        <br>
        <br>
        <div class="col-md-4">
            <label for="additionalRequirements" class="form-label">Additional Requirements</label>
            <select id="additionalRequirements" class="form-select">
                <option selected>Choose..</option>
                <option>Parking arrangements</option>
                <option>Technical Support Services</option>
                <option>Wifi access</option>
                <option>Other</option>
            </select>
        </div>
        <br>
        <br>
        In case of unavailability of the desired venue:
        <br>
        <form class="priority-form">
            <label for="priority1">Priority 1:</label>
            <select id="priority1">
                <option value="high">Main auditorium</option>
                <option value="medium">Mini auditorium</option>
            </select>
